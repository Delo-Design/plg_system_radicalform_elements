{
    "name": "rfformcheckboxes_item",
    "title": "Checkbox item",
    "width": 500,
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "label": {
            "label": "Label",
            "type": "text"
        },
        "value": {
            "label": "Value",
            "type": "Text"
        },
        "css_classes": {
            "label": "CSS classes",
            "type": "Text"
        },
        "checkbox_required": {
            "label": "Required",
            "type": "checkbox",
            "text": "Set as required"
        }
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "General",
                    "type": "group",
                    "fields": [
                        "label",
                        "value",
                        "css_classes",
                        "checkbox_required"
                    ]
                }
            ]
        }
    }
}